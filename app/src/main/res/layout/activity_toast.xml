<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vazquez.carlos.toastapp.ToastActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/toast_button_default_lbl"
        android:id="@+id/default_toast_btn"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="onDefaultToast" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/toast_custom_msg_lbl"
        android:id="@+id/custom_toast_btn"
        android:layout_below="@+id/default_toast_btn"
        android:layout_centerHorizontal="true"
        android:onClick="onCustomToast" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/snackbar_button_lbl"
        android:id="@+id/snackbar_btn"
        android:layout_below="@+id/custom_toast_btn"
        android:layout_centerHorizontal="true"
        android:onClick="onSnackBar" />
</RelativeLayout>
